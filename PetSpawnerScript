-- Clear Job-ID button (red)
local ClearJobBtn = Instance.new("TextButton")
ClearJobBtn.Size = UDim2.new(0, 220, 0, 30)
ClearJobBtn.Position = UDim2.new(0.5, -110, 0, 70)
ClearJobBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50) -- red background
ClearJobBtn.Text = "Clear Job-ID"
ClearJobBtn.TextColor3 = Color3.fromRGB(255, 255, 255) -- white text
ClearJobBtn.Parent = Frame

local clearCorner = Instance.new("UICorner")
clearCorner.CornerRadius = UDim.new(0, 6)
clearCorner.Parent = ClearJobBtn

ClearJobBtn.MouseButton1Click:Connect(function()
    JobBox.Text = ""
end)
